<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Recipe Manager</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/auth.css">
    <link rel="stylesheet" href="/css/recipes.css">
    <% if (NODE_ENV.includes('dev')) { %>
        <script>
            // Get the current hostname and port from the browser
            const host = window.location.hostname;
            const currentPort = window.location.port;

            // Calculate WebSocket port (current port + 1)
            const wsPort = currentPort ? (parseInt(currentPort) + 1) : 3001;

            // Create WebSocket connection using dynamic hostname and port
            const ws = new WebSocket(`ws://${host}:${wsPort}`);
            ws.onclose = () => {
                setTimeout(() => location.reload(), 2000);
            };
        </script>
    <% } %>
</head>
<body>
    <header>
        <nav>
            <div class="nav-brand">
                <a href="/">Recipe Manager</a>
            </div>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <% if (isAuthenticated) { %>
                    <li><a href="/recipes">My Recipes</a></li>
                    <li><a href="/shared">Shared With Me</a></li>
                    <% if (isContributor) { %>
                        <li><a href="/contributor">Contributor</a></li>
                    <% } %>
                    <% if (isAdmin) { %>
                        <li><a href="/admin">Admin</a></li>
                    <% } %>
                <% } %>
                <li><a href="/about">About</a></li>
            </ul>
            <div class="nav-auth">
                <% if (isAuthenticated) { %>
                    <span class="user-greeting">Hello, <%= user.firstName %>!</span>
                    <form action="/logout" method="POST" style="display: inline;">
                        <button type="submit" class="btn-logout">Logout</button>
                    </form>
                <% } else { %>
                    <a href="/login" class="btn-login">Login</a>
                    <a href="/register" class="btn-register">Register</a>
                <% } %>
            </div>
        </nav>
    </header>
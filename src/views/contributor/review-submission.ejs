<!-- /src/views/contributor/review-submission.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Recipe Manager</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>

    <main class="container">
        <div class="page-header">
            <h1>Review Submission</h1>
            <div class="status-badge status-<%= submission.status %>">
                <%= submission.status.replace('_', ' ').toUpperCase() %>
            </div>
        </div>

        <div class="recipe-detail">
            <div class="recipe-header">
                <h2><%= submission.title %></h2>
                <p class="recipe-author">
                    Submitted by: <strong><%= submission.first_name %> <%= submission.last_name %></strong> 
                    (<%= submission.email %>)<br>
                    <small>on <%= new Date(submission.submitted_at).toLocaleDateString() %></small>
                </p>
            </div>

            <% if (submission.image_url) { %>
                <div class="recipe-image-container">
                    <img src="<%= submission.image_url %>" alt="<%= submission.title %>" class="recipe-detail-image">
                </div>
            <% } %>

            <div class="recipe-info-grid">
                <% if (submission.prep_time) { %>
                    <div class="info-item">
                        <span class="label">Prep Time:</span>
                        <span class="value"><%= submission.prep_time %> minutes</span>
                    </div>
                <% } %>
                <% if (submission.cook_time) { %>
                    <div class="info-item">
                        <span class="label">Cook Time:</span>
                        <span class="value"><%= submission.cook_time %> minutes</span>
                    </div>
                <% } %>
                <% if (submission.servings) { %>
                    <div class="info-item">
                        <span class="label">Servings:</span>
                        <span class="value"><%= submission.servings %></span>
                    </div>
                <% } %>
                <% if (submission.difficulty) { %>
                    <div class="info-item">
                        <span class="label">Difficulty:</span>
                        <span class="value"><%= submission.difficulty.charAt(0).toUpperCase() + submission.difficulty.slice(1) %></span>
                    </div>
                <% } %>
            </div>

            <% if (submission.description) { %>
                <section class="recipe-section">
                    <h3>Description</h3>
                    <p><%= submission.description %></p>
                </section>
            <% } %>

            <section class="recipe-section">
                <h3>Ingredients</h3>
                <% if (submission.ingredients && submission.ingredients.length > 0) { %>
                    <ul class="ingredients-list">
                        <% submission.ingredients.forEach(ingredient => { %>
                            <li>
                                <span class="quantity"><%= ingredient.quantity %></span>
                                <span class="name"><%= ingredient.ingredient_name %></span>
                            </li>
                        <% }) %>
                    </ul>
                <% } else { %>
                    <p class="text-muted">No ingredients listed</p>
                <% } %>
            </section>

            <section class="recipe-section">
                <h3>Instructions</h3>
                <div class="instructions">
                    <%= submission.instructions %>
                </div>
            </section>

            <% if (submission.status === 'under_review') { %>
                <section class="recipe-section review-actions">
                    <h3>Review Decision</h3>
                    
                    <form action="/contributor/submissions/<%= submission.submission_id %>/approve" method="POST" class="review-form" onsubmit="return confirm('Are you sure you want to APPROVE this recipe and add it to Featured Recipes?');">
                        <div class="form-group">
                            <label for="approve-notes">Approval Notes (Optional):</label>
                            <textarea id="approve-notes" name="notes" rows="3" placeholder="Any feedback or comments for the author..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-success">
                            ✓ Approve & Feature Recipe
                        </button>
                    </form>

                    <form action="/contributor/submissions/<%= submission.submission_id %>/reject" method="POST" class="review-form" onsubmit="return confirm('Are you sure you want to REJECT this recipe?');">
                        <div class="form-group">
                            <label for="reject-notes">Rejection Reason (Required):</label>
                            <textarea id="reject-notes" name="notes" rows="3" required placeholder="Please explain why this recipe cannot be featured..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-danger">
                            ✗ Reject Recipe
                        </button>
                    </form>
                </section>
            <% } %>

            <div class="recipe-actions">
                <a href="/contributor/submissions" class="btn btn-secondary">← Back to Submissions</a>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>
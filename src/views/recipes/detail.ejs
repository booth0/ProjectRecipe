<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Recipe Manager</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>

    <main class="container">
        <% if (locals.flashMessage) { %>
            <div class="alert alert-<%= flashMessage.type %>">
                <%= flashMessage.message %>
            </div>
        <% } %>

        <div class="recipe-detail">
            <div class="recipe-header">
                <h1><%= recipe.title %></h1>
                <% if (isFeatured) { %>
                    <span class="badge badge-featured">‚≠ê Featured Recipe</span>
                <% } %>
                <% if (isSubmitted) { %>
                    <span class="badge badge-pending">üìã Pending Review</span>
                <% } %>
            </div>

            <% if (recipe.image_url) { %>
                <div class="recipe-image-container">
                    <img src="<%= recipe.image_url %>" alt="<%= recipe.title %>" class="recipe-detail-image">
                </div>
            <% } %>

            <div class="recipe-info-grid">
                <% if (recipe.prep_time) { %>
                    <div class="info-item">
                        <span class="label">Prep Time:</span>
                        <span class="value"><%= recipe.prep_time %> minutes</span>
                    </div>
                <% } %>
                <% if (recipe.cook_time) { %>
                    <div class="info-item">
                        <span class="label">Cook Time:</span>
                        <span class="value"><%= recipe.cook_time %> minutes</span>
                    </div>
                <% } %>
                <% if (recipe.servings) { %>
                    <div class="info-item">
                        <span class="label">Servings:</span>
                        <span class="value"><%= recipe.servings %></span>
                    </div>
                <% } %>
                <% if (recipe.difficulty) { %>
                    <div class="info-item">
                        <span class="label">Difficulty:</span>
                        <span class="value"><%= recipe.difficulty.charAt(0).toUpperCase() + recipe.difficulty.slice(1) %></span>
                    </div>
                <% } %>
            </div>

            <% if (recipe.categories && recipe.categories.length > 0) { %>
                <div class="recipe-categories">
                    <strong>Categories:</strong>
                    <% recipe.categories.forEach(category => { %>
                        <span class="category-tag"><%= category.category_name %></span>
                    <% }) %>
                </div>
            <% } %>

            <% if (recipe.description) { %>
                <section class="recipe-section">
                    <h2>Description</h2>
                    <p><%= recipe.description %></p>
                </section>
            <% } %>

            <section class="recipe-section">
                <h2>Ingredients</h2>
                <% if (recipe.ingredients && recipe.ingredients.length > 0) { %>
                    <ul class="ingredients-list">
                        <% recipe.ingredients.forEach(ingredient => { %>
                            <li>
                                <span class="quantity"><%= ingredient.quantity %></span>
                                <span class="name"><%= ingredient.ingredient_name %></span>
                            </li>
                        <% }) %>
                    </ul>
                <% } else { %>
                    <p class="text-muted">No ingredients listed</p>
                <% } %>
            </section>

            <section class="recipe-section">
                <h2>Instructions</h2>
                <div class="instructions">
                    <%= recipe.instructions %>
                </div>
            </section>

            <div class="recipe-actions">
                <a href="/recipes" class="btn btn-secondary">‚Üê Back to My Recipes</a>
                
                <% if (isOwner) { %>
                    <% if (!isFeatured) { %>
                        <a href="/recipes/<%= recipe.recipe_id %>/edit" class="btn btn-primary">Edit Recipe</a>
                    <% } %>
                    
                    <% if (!isSubmitted && !isFeatured) { %>
                        <form action="/recipes/<%= recipe.recipe_id %>/submit" method="POST" style="display: inline;" onsubmit="return confirm('Submit this recipe for review to be featured?');">
                            <button type="submit" class="btn btn-success">Submit for Review</button>
                        </form>
                    <% } %>
                    
                    <form action="/recipes/<%= recipe.recipe_id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this recipe? This action cannot be undone.');">
                        <button type="submit" class="btn btn-danger">Delete Recipe</button>
                    </form>
                <% } %>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>